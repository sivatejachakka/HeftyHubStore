} *@

@* <partial name="_Notification" /> *@

<div class="container">
    @* In bootstrap if we use row class, that row consists of 12 columns, in that we seperated into 6 columns each *@
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary"> Category List </h2>
        </div>
        <div class="col-6 text-end">
            @* In razor pages we will have asp-page as we dont have controllers here, and inside that we define the route of the razor page. *@
            <a asp-page="/Categories/CategoryCreateUpdate" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/CategoryCreateUpdate" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="/Categories/DeleteCategory" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
